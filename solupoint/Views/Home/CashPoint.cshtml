@{
    ViewBag.Title = "Scontrino Senza Cassa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Genera scontrini elettronici senza registratore di cassa, in modo semplice e veloce." />
    <title>@ViewBag.Title</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/Content/styles.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #007bff, #6610f2);
        }

        .hover-scale {
            transition: transform 0.3s ease;
        }

            .hover-scale:hover {
                transform: scale(1.05);
            }

        .rotate-icon {
            transition: transform 0.3s ease;
        }

        .collapsed .rotate-icon {
            transform: rotate(0deg);
        }

        .not-collapsed .rotate-icon {
            transform: rotate(180deg);
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <a class="navbar-brand fw-bold" href="#">Scontrino Senza Cassa</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#about">Chi Siamo</a></li>
                    <li class="nav-item"><a class="nav-link" href="#services">Servizi</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contatti</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Hero -->
    <section id="hero" class="bg-gradient text-white text-center py-5" data-aos="fade-down">
        <div class="container">
            <h1 class="display-4 fw-bold">Emetti Scontrini Elettronici in Pochi Click</h1>
            <p class="lead">Soluzione rapida e semplice per negozianti e professionisti.</p>
            <a href="#register" class="btn btn-light btn-lg mt-3 shadow hover-scale">🚀 Provalo Subito</a>
        </div>
    </section>

    <!-- About -->
    <section id="about" class="py-5 bg-light rounded" data-aos="fade-up">
        <div class="container">
            <h2 class="text-center">Chi Siamo</h2>
            <p class="lead text-center">Siamo un team di sviluppatori e esperti di contabilità...</p>
            <div class="row text-center">
                <div class="col-md-4" data-aos="fade-up"><i class="fas fa-bullseye fa-2x mb-2 text-primary"></i><h4>Missione</h4><p>Aiutiamo i negozianti...</p></div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100"><i class="fas fa-eye fa-2x mb-2 text-primary"></i><h4>Visione</h4><p>Un mondo in cui...</p></div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="200"><i class="fas fa-users fa-2x mb-2 text-primary"></i><h4>Team</h4><p>Un gruppo di esperti...</p></div>
            </div>
        </div>
    </section>

    <!-- Services -->
    <section id="services" class="py-5" data-aos="fade-up">
        <div class="container">
            <h2 class="text-center mb-5">I Nostri Servizi</h2>
            <div class="row text-center">
                <div class="col-md-4" data-aos="fade-up"><i class="fas fa-receipt fa-3x mb-3 text-primary"></i><h5>Emissione Scontrini</h5><p>Genera e invia...</p></div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="100"><i class="fas fa-chart-line fa-3x mb-3 text-primary"></i><h5>Report & Contabilità</h5><p>Accedi a report dettagliati...</p></div>
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="200"><i class="fas fa-headset fa-3x mb-3 text-primary"></i><h5>Assistenza</h5><p>Il nostro team è sempre pronto...</p></div>
            </div>
        </div>
    </section>

    <!-- Register CTA -->
    <section id="register" class="bg-dark text-white text-center py-5" data-aos="zoom-in">
        <div class="container">
            <h2>Inizia Subito</h2>
            <p class="lead">Prova la app direttamente dal web!</p>
            <a href="https://api.solupoint.com" class="btn btn-light btn-lg shadow hover-scale">Prova Ora</a>
        </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-5 bg-light" data-aos="fade-up">
        <div class="container">
            <h2 class="text-center mb-4">Contattaci</h2>
            <form method="post" action="/Home/SendContact">
                <div class="row">
                    <div class="col-md-6"><div class="form-group"><label for="name">Nome</label><input type="text" id="name" class="form-control" name="name" required /></div></div>
                    <div class="col-md-6"><div class="form-group"><label for="email">Email</label><input type="email" id="email" class="form-control" name="email" required /></div></div>
                </div>
                <div class="form-group"><label for="message">Messaggio</label><textarea id="message" class="form-control" name="message" rows="5" required></textarea></div>
                <div class="text-center mt-3"><button type="submit" class="btn btn-primary btn-lg shadow">Invia Messaggio</button></div>
            </form>
        </div>
    </section>



    <section id="faq" class="container py-5">
        <h2 class="text-center mb-4">❓ Domande Frequenti (FAQ)</h2>
        <div class="accordion" id="faqAccordion">

            <div class="card" data-aos="fade-up">
                <div class="card-header" id="faq1">
                    <h5>
                        <button class="btn btn-link collapsed d-flex justify-content-between w-100" data-toggle="collapse" data-target="#collapse1">
                            È veramente possibile fare lo scontrino senza acquistare il registratore di cassa telematico?
                            <i class="fas fa-chevron-down ml-2 rotate-icon"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapse1" class="collapse" data-parent="#faqAccordion">
                    <div class="card-body">
                        Sì, con Billy, il registratore di cassa virtuale, non hai bisogno dei tradizionali registratori di cassa: è sufficiente un dispositivo collegato ad internet e il nostro software.<br><br>
                        Al momento del pagamento basterà fare l’accesso al proprio account Billy da un qualsiasi dispositivo collegato ad internet ed utilizzarlo come un normale registratore di cassa; Billy invierà i dati all’Agenzia delle Entrate ed emetterà uno scontrino a norma di legge da inviare o consegnare al cliente.
                    </div>
                </div>
            </div>

            <div class="card" data-aos="fade-up" data-aos-delay="100">
                <div class="card-header" id="faq2">
                    <h5>
                        <button class="btn btn-link collapsed d-flex justify-content-between w-100" data-toggle="collapse" data-target="#collapse2">
                            È obbligatorio consegnare al cliente uno scontrino cartaceo?
                            <i class="fas fa-chevron-down ml-2 rotate-icon"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapse2" class="collapse" data-parent="#faqAccordion">
                    <div class="card-body">
                        L’art. 1 comma 4 del Decreto del 7 Dicembre 2016 recita: “Previo accordo con il destinatario, il documento commerciale può essere emesso in forma elettronica garantendone l’autenticità e l’integrità.”<br><br>
                        Billy consente di inviare lo scontrino per email, WhatsApp o SMS.
                    </div>
                </div>
            </div>

            <div class="card" data-aos="fade-up" data-aos-delay="200">
                <div class="card-header" id="faq3">
                    <h5>
                        <button class="btn btn-link collapsed d-flex justify-content-between w-100" data-toggle="collapse" data-target="#collapse3">
                            Billy è a norma di legge?
                            <i class="fas fa-chevron-down ml-2 rotate-icon"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapse3" class="collapse" data-parent="#faqAccordion">
                    <div class="card-body">
                        Billy è realmente un registratore di cassa virtuale, rispetta tutte le norme di legge come un registratore di cassa tradizionale.<br><br>
                        Al momento dell’emissione dello scontrino, il software si collega direttamente all’Agenzia delle Entrate comunicando immediatamente la transazione effettuata e rilasciando un documento commerciale da dare o inviare al cliente.
                    </div>
                </div>
            </div>

            <div class="card" data-aos="fade-up" data-aos-delay="300">
                <div class="card-header" id="faq4">
                    <h5>
                        <button class="btn btn-link collapsed d-flex justify-content-between w-100" data-toggle="collapse" data-target="#collapse4">
                            Come si fa la chiusura giornaliera con Billy?
                            <i class="fas fa-chevron-down ml-2 rotate-icon"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapse4" class="collapse" data-parent="#faqAccordion">
                    <div class="card-body">
                        Billy ti semplifica il lavoro!<br><br>
                        Non è necessario fare la chiusura giornaliera della cassa perché Billy invia i dati all’Agenzia delle Entrate non appena viene emesso uno scontrino.
                    </div>
                </div>
            </div>

            <div class="card" data-aos="fade-up" data-aos-delay="400">
                <div class="card-header" id="faq5">
                    <h5>
                        <button class="btn btn-link collapsed d-flex justify-content-between w-100" data-toggle="collapse" data-target="#collapse5">
                            Serve un personal computer per usare Billy?
                            <i class="fas fa-chevron-down ml-2 rotate-icon"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapse5" class="collapse" data-parent="#faqAccordion">
                    <div class="card-body">
                        Ti bastano uno smartphone o un tablet connessi a internet.<br><br>
                        Se lo preferisci puoi usare Billy anche dal tuo personal computer.
                    </div>
                </div>
            </div>

            <div class="card" data-aos="fade-up" data-aos-delay="500">
                <div class="card-header" id="faq6">
                    <h5>
                        <button class="btn btn-link collapsed d-flex justify-content-between w-100" data-toggle="collapse" data-target="#collapse6">
                            Quali requisiti deve avere un dispositivo per utilizzare Billy?
                            <i class="fas fa-chevron-down ml-2 rotate-icon"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapse6" class="collapse" data-parent="#faqAccordion">
                    <div class="card-body">
                        È sempre possibile usare Billy tramite browser.<br><br>
                        Nel caso in cui si utilizzi da dispositivo mobile ti consigliamo di scaricare l’applicazione, così puoi usare il software in tutte le sue funzionalità!<br><br>
                        Da computer Microsoft puoi utilizzare Billy in qualsiasi condizione, ti basta un browser web.<br><br>
                        Nel caso di utilizzo tramite app, se hai un dispositivo Android è necessario che il sistema operativo sia aggiornato almeno alla versione 8.0, se invece hai un dispositivo Apple, iOS deve essere aggiornato alla versione 14.
                    </div>
                </div>
            </div>

            <div class="card" data-aos="fade-up" data-aos-delay="600">
                <div class="card-header" id="faq7">
                    <h5>
                        <button class="btn btn-link collapsed d-flex justify-content-between w-100" data-toggle="collapse" data-target="#collapse7">
                            Quale differenza c’è tra scontrino e documento commerciale?
                            <i class="fas fa-chevron-down ml-2 rotate-icon"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapse7" class="collapse" data-parent="#faqAccordion">
                    <div class="card-body">
                        Il documento commerciale è, in sostanza, un documento estremamente simile allo scontrino fiscale, vale come prova d’acquisto e/o a titolo di garanzia ma non ha valore ai fini fiscali.<br><br>
                        Affinché il documento commerciale valga ai fini di eventuali detrazioni, dovrà essere integrato dal Codice Fiscale o dalla Partita IVA del cliente.<br><br>
                        Con Billy si possono inserire delle righe di intestazione che contengano il codice fiscale o la Partita IVA.
                    </div>
                </div>
            </div>

            <div class="card" data-aos="fade-up" data-aos-delay="700">
                <div class="card-header" id="faq8">
                    <h5>
                        <button class="btn btn-link collapsed d-flex justify-content-between w-100" data-toggle="collapse" data-target="#collapse8">
                            Quali sono i requisiti per stampare il documento commerciale?
                            <i class="fas fa-chevron-down ml-2 rotate-icon"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapse8" class="collapse" data-parent="#faqAccordion">
                    <div class="card-body">
                        Se accedi a Billy da app (Android o iOS) puoi utilizzare una delle stampanti che abbiamo testato.<br><br>
                        Se lo utilizzi da un PC Windows puoi usare praticamente ogni stampante mentre da computer Mac non possiamo consigliare nulla in particolare.<br><br>
                        Non puoi stampare i documenti commerciali se utilizzi Billy tramite web su dispositivo mobile.
                    </div>
                </div>
            </div>

            <div class="card" data-aos="fade-up" data-aos-delay="800">
                <div class="card-header" id="faq9">
                    <h5>
                        <button class="btn btn-link collapsed d-flex justify-content-between w-100" data-toggle="collapse" data-target="#collapse9">
                            Come faccio ad emettere scontrini in mancanza di connessione o in caso di non funzionamento del sito dell’Agenzia?
                            <i class="fas fa-chevron-down ml-2 rotate-icon"></i>
                        </button>
                    </h5>
                </div>
                <div id="collapse9" class="collapse" data-parent="#faqAccordion">
                    <div class="card-body">
                        In entrambi i casi è necessario compilare il registro di emergenza dei corrispettivi e informare il proprio commercialista.
                    </div>
                </div>
            </div>

        </div>
    </section>


    <!-- Footer -->
    <footer class="text-center py-4 bg-dark text-white mt-5">
        <div class="container">
            <p class="mb-1">&copy; 2025 Scontrino Senza Cassa</p>
            <small>Creato con ❤️ per semplificare la vita ai commercianti.</small>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>


    <script>
        AOS.init({ duration: 800, once: true });

        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    e.preventDefault();
                    window.scrollTo({ top: target.offsetTop - 70, behavior: 'smooth' });
                }
            });
        });
    </script>
</body>
</html>
