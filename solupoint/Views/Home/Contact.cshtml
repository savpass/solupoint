@{
    ViewBag.Title = "Contattaci";
    ViewBag.Message = "Siamo qui per aiutarti a gestire la tua attività in modo semplice e veloce!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container py-5" style="font-family: 'Segoe UI', sans-serif;">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-center" data-aos="fade-down">
            <h1 class="display-5 fw-bold text-primary">@ViewBag.Title</h1>
            <p class="lead">@ViewBag.Message</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6" data-aos="fade-up" data-aos-delay="100">
            <div class="bg-light rounded shadow p-4">
                <h4 class="text-primary mb-3">📍 Azienda</h4>
                <p><strong>CashPoint - Soluzioni Digitali</strong></p>

                <h4 class="text-primary mt-4 mb-2">🧾 Partita IVA</h4>
                <p>P.IVA 04133214002</p>

                <h4 class="text-primary mt-4 mb-2">📧 Contatti</h4>
                <p><strong>Email:</strong> <a href="mailto:info@solupoint.com" class="text-decoration-none text-dark">info@solupoint.com</a></p>

                <h4 class="text-primary mt-4 mb-2">🕒 Orari</h4>
                <p>Lun–Ven: 9:00 – 18:00</p>
            </div>
        </div>

        <div class="col-md-6 mt-4 mt-md-0" data-aos="fade-up" data-aos-delay="200">
            <div class="bg-white rounded shadow p-4">
                <h4 class="text-primary mb-3">✉️ Scrivici un messaggio</h4>
                <form method="post" action="/Home/SendContact">
                    <div class="form-group mb-3">
                        <label for="name">Nome</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="message">Messaggio</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 shadow">Invia</button>
                </form>
            </div>
        </div>
    </div>
</section>



<!-- AOS Animation -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    AOS.init({ duration: 800, once: true });
</script>

