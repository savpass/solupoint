    <div class="row text-center mt-5">

        <!-- Abbonamento annuale -->
        <div class="col-md-4 mb-4" data-aos="zoom-in">
            <div class="card shadow rounded-4 h-100">
                <div class="card-body">
                    <h4 class="card-title">💼 Abbonamento Annuale</h4>
                    <p class="card-text mt-3"><strong>Standard:</strong> 70€<br /><strong>Forfettari:</strong> 60€</p>
                    <p class="text-muted">Perfetto per l'uso continuativo durante tutto l’anno.</p>
                </div>
            </div>
        </div>

        <!-- Mensile -->
        <div class="col-md-4 mb-4" data-aos="zoom-in" data-aos-delay="100">
            <div class="card shadow rounded-4 h-100">
                <div class="card-body">
                    <h4 class="card-title">📆 Abbonamento Mensile</h4>
                    <p class="card-text mt-3"><strong>Standard:</strong> 7€<br /><strong>Forfettari:</strong> 6€</p>
                    <p class="text-muted">Ideale per attività stagionali o saltuarie.</p>
