@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
    <style>
        .hero {
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/images/hero-soluzioni.jpg') center center/cover no-repeat;
            color: white;
            padding: 150px 20px;
            text-align: center;
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
            }

        .product-icon {
            font-size: 3rem;
            color: #0d6efd;
            margin-bottom: 10px;
        }

        .product-card {
            background-color: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-10px);
            }

        .products-section {
            background: #f8f9fa;
            padding: 60px 20px;
        }

        .section-title {
            font-size: 2.2rem;
            font-weight: bold;
            margin-bottom: 40px;
        }
    </style>
}

<main>
    <!-- HERO -->
    <header class="hero">
        <h1>Soluzioni per il tuo punto vendita</h1>
        <p class="lead mt-3">Registratori di cassa, software gestionali, bilance e molto altro.</p>
        <a href="#prodotti" class="btn btn-light btn-lg mt-4">Scopri di più</a>
    </header>

    <!-- CHI SIAMO -->
    <section class="container text-center my-5" data-aos="fade-up">
        <h2 class="section-title">Chi Siamo</h2>
        <p class="lead">
            Solupoint è un’azienda leader nelle soluzioni integrate per il retail. Dal software alla cassa, ti accompagniamo con tecnologie affidabili e pronte all’uso.
        </p>
    </section>

    <!-- PRODOTTI -->
    <section id="prodotti" class="products-section">
        <div class="container text-center">
            <h2 class="section-title" data-aos="fade-up">I Nostri Prodotti</h2>
            <div class="row g-4">
                <div class="col-md-3" data-aos="zoom-in">
                    <div class="product-card">
                        <div class="product-icon"><i class="fas fa-cash-register"></i></div>
                        <h4>Registratori di Cassa</h4>
                        <p>Modelli telematici pronti per l'invio automatico dei corrispettivi.</p>
                    </div>
                </div>
                <div class="col-md-3" data-aos="zoom-in" data-aos-delay="100">
                    <div class="product-card">
                        <div class="product-icon"><i class="fas fa-mobile-alt"></i></div>
                        <h4>Cassa Virtuale</h4>
                        <p>Emetti scontrini ovunque ti trovi, con smartphone, tablet o PC.</p>
                    </div>
                </div>
                <div class="col-md-3" data-aos="zoom-in" data-aos-delay="200">
                    <div class="product-card">
                        <div class="product-icon"><i class="fas fa-balance-scale"></i></div>
                        <h4>Bilance</h4>
                        <p>Strumenti di pesatura precisi per negozi alimentari e mercati.</p>
                    </div>
                </div>
                <div class="col-md-3" data-aos="zoom-in" data-aos-delay="300">
                    <div class="product-card">
                        <div class="product-icon"><i class="fas fa-coins"></i></div>
                        <h4>Rendiresto</h4>
                        <p>Gestione automatica del contante con dispositivi compatibili.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init({ duration: 800, once: true });
    </script>
}
