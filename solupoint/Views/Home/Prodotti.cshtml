@{
    ViewBag.Title = "Articoli";
    ViewBag.Message = "I nostri prodotti";
}
<main aria-labelledby="title" style="font-family: Arial, sans-serif; max-width: 1200px; margin: 0 auto; padding: 2rem;">
    <h2 id="title" style="font-size: 2rem; color: #2c3e50; margin-bottom: 0.5rem; text-align: center;">@ViewBag.Message</h2>
    @*<h3 style="font-size: 1.2rem; color: #16a085; margin-bottom: 1.5rem; text-align: center;">@ViewBag.Message</h3>*@

    <section class="products-container" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.5rem; justify-items: center; padding: 1rem;">

        <!-- Product 1 -->
        <div class="product-card" style="width: 100%; background-color: #ecf0f1; padding: 1.5rem; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease, box-shadow 0.3s ease;">
            @*<img src="https://via.placeholder.com/300" alt="s" style="width: 100%; height: auto; border-radius: 8px;">*@
            <h4 style="font-size: 1.5rem; color: #2980b9; margin-top: 1rem;">Registratori di cassa</h4>
            <p style="font-size: 1rem; color: #7f8c8d;">Registratori telematici per l'invio della chiusura fiscale.</p>
            <a href="https://www.edit-srl.it/prodotti/" target="_blank" style="display: inline-block; background-color: #3498db; color: white; padding: 0.7rem 1.5rem; font-size: 1rem; text-decoration: none; border-radius: 4px; text-align: center; margin-top: 1rem;">Vedi Modelli</a>
            @*<p style="font-size: 1.2rem; font-weight: bold; color: #2c3e50;">€ 50,00</p>*@
        </div>

        <!-- Product 2 -->
        <div class="product-card" style="width: 100%; background-color: #ecf0f1; padding: 1.5rem; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease, box-shadow 0.3s ease;">
            @*<img src="https://via.placeholder.com/300" alt="Prodotto 2" style="width: 100%; height: auto; border-radius: 8px;">*@
            <h4 style="font-size: 1.5rem; color: #2980b9; margin-top: 1rem;">Cassa virtuale</h4>
            <p style="font-size: 1rem; color: #7f8c8d;">CashPoint - La cassa virtuale per emettere scontrini.</p>
            <a href="@Url.Action("CashPoint", "Home")" target="_blank" style="display: inline-block; background-color: #3498db; color: white; padding: 0.7rem 1.5rem; font-size: 1rem; text-decoration: none; border-radius: 4px; text-align: center; margin-top: 1rem;">Scopri</a>

            @*<p style="font-size: 1.2rem; font-weight: bold; color: #2c3e50;">€ 80,00</p>*@
        </div>

        <!-- Product 3 -->
        <div class="product-card" style="width: 100%; background-color: #ecf0f1; padding: 1.5rem; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease, box-shadow 0.3s ease;">
            @*<img src="https://via.placeholder.com/300" alt="Prodotto 3" style="width: 100%; height: auto; border-radius: 8px;">*@
            <h4 style="font-size: 1.5rem; color: #2980b9; margin-top: 1rem;">Rendiresto</h4>
            <p style="font-size: 1rem; color: #7f8c8d;">SelfPay - Il rendiresto automatico per contanti.</p>
            <a href="https://cashmatic.it/prodotti/selfpay/" target="_blank" style="display: inline-block; background-color: #3498db; color: white; padding: 0.7rem 1.5rem; font-size: 1rem; text-decoration: none; border-radius: 4px; text-align: center; margin-top: 1rem;">Vedi Modelli</a>

            
            @*<p style="font-size: 1.2rem; font-weight: bold; color: #2c3e50;">€ 120,00</p>*@
        </div>

    </section>

</main>

<style>
    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
    }

    .product-card img {
        border-radius: 8px;
    }
</style>
