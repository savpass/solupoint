
@{
    ViewBag.Title = "Pagamenti";
}

<h2>Pagamenti</h2>

@model List<solupoint.Controllers.Payment>

<h2>Pagamenti</h2>

@if (Model == null || !Model.Any())
{
    <p>Nessun pagamento programmato</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Descrizione</th>
                <th>Importo</th>
                <th>Data Scadenza</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model)
            {
                <tr>
                    <td>@payment.PaymentAmount</td>
                    <td>@payment.PaymentAmount.ToString("C")</td>
                    <td>@payment.PaymentDate</td>
                </tr>
            }
        </tbody>
    </table>
}
