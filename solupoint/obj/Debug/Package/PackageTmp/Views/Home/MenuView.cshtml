
@{
    ViewBag.Title = "MenuView";
}




@{
    Layout = null;  // Impostiamo il layout su null per un esempio semplice
}

<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu a Tendina</title>
    <style>
        /* Stili generali */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Contenitore del menu principale */
        .menu {
            background-color: #333;
            overflow: hidden;
            display: flex;
            justify-content: space-around;
            list-style: none;
            margin: 0;
            padding: 0;
        }

            /* Stili per i singoli link del menu */
            .menu > li {
                position: relative;
            }

            .menu a {
                color: white;
                padding: 14px 20px;
                text-decoration: none;
                display: block;
            }

                .menu a:hover {
                    background-color: #575757;
                }

        /* Menu a tendina (inizialmente nascosto) */
        .submenu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #333;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            min-width: 160px;
        }

            /* Stili per i link del sottomenu */
            .submenu a {
                padding: 12px 16px;
            }

                .submenu a:hover {
                    background-color: #575757;
                }

        /* Mostra il sottomenu quando il mouse è sopra */
        .menu > li:hover .submenu {
            display: block;
        }
    </style>
</head>
<body>

    <ul class="menu">
        <li>
            <a href="@Url.Action("Index", "Home")">Home</a>
        </li>
        <li>
            <a href="@Url.Action("Servizi", "Home")">Servizi</a>
            <ul class="submenu">
                <li><a href="@Url.Action("FatturazioneElettronica", "Home")">Fatturazione Elettronica</a></li>
                <li><a href="@Url.Action("Gestionali", "Home")">Gestionali per Ristoranti</a></li>
                <li><a href="@Url.Action("RegistratoriCassa", "Home")">Registratori di Cassa</a></li>
            </ul>
        </li>
        <li>
            @Html.ActionLink("Prodotti", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
            <ul class="submenu">
                <li><a href="@Url.Action("Prodotto1", "Home")">Prodotto 1</a></li>
                <li><a href="@Url.Action("Prodotto2", "Home")">Prodotto 2</a></li>
                <li><a href="@Url.Action("Prodotto3", "Home")">Prodotto 3</a></li>
            </ul>
        </li>
        <li>
            <a href="@Url.Action("Contatti", "Home")">Contatti</a>
        </li>
    </ul>

</body>
</html>
